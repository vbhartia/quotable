
  <div class="panel panel-default">
  		<div class="panel-heading">
	    	<h3 class="panel-title">
	    		<%= @quote_to_render[:text] %>
	    	</h3>
  		
  		</div>
  		
  		<div class="panel-body">
    			<%= @quote_to_render[:text] %>
          <br/>

          <%= link_to @quote_to_render[:author], author_page_path(@quote_to_render[:author])  %>

          <hr/>

          <div class="row">
            <div class="col-md-6">

              Tags:   

              <% @quote_to_render[:tags].each do |tag| %>

                <span class="badge"><%= link_to tag, tag_page_path(tag) %></span>

              <% end %>

            </div>
            <div class="col-md-6">

              Favorite:
            </div>

            <hr/> 
          </div>

          <div class="row">
            <div class="col-md-12">

            Share:
              Copy URL <%= quote_individual_path('abc') %>
              Facebook
              Linkedin
              Twitter
              Email

            </div> 
          </div>

      </div>
	</div>